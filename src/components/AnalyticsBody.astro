---
import fs from 'node:fs/promises';

const url = new URL('../deploy-config.json', import.meta.url);
const json = await fs.readFile(url, 'utf-8');
const deployConfig = JSON.parse(json);

const gtmID = deployConfig['gtmID'];
const gtmNSURL = "https://www.googletagmanager.com/ns.html?id=" + gtmID;
---

<!-- Google Tag Manager (noscript) -->
<noscript><iframe src={gtmNSURL}
                  height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->
